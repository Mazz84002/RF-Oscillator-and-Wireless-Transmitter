\end_layout

\begin_layout Plain Layout

     
\backslash
draw (6.5,-4) node[ground]{} to[vsource, fill=cyan,l_=$g_mV_{gs}
\backslash
cdot {r_{ds}}||R||
\backslash
frac{1}{sC}$] (6.5,-2);     
\backslash
draw (6.5,-2) to[resistor, l=${r_{ds}}||R||
\backslash
frac{1}{sC}$] (9.9,-2);     
\backslash
node at (9.9,-2)[circle,fill,inner sep=2pt, label=right: $V_{out}$]{}; 
